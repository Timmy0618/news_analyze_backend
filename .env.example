# 資料庫設定範本
# 複製此文件為 .env 並修改設定值

# 資料庫類型: sqlite 或 postgresql
DATABASE_TYPE=sqlite

# SQLite 設定 (開發/測試環境)
SQLITE_DB_PATH=./news.db

# PostgreSQL 設定 (生產環境)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=news_analyze
POSTGRES_USER=news_user
POSTGRES_PASSWORD=your_password_here

# 其他設定
DEBUG=true
LOG_LEVEL=INFO

# 爬蟲設定
MAX_CONCURRENT_SCRAPERS=4
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
DELAY_BETWEEN_REQUESTS=2

# 新聞來源啟用狀態
ENABLE_SETN=true
ENABLE_LTN=true
ENABLE_TVBS=true
ENABLE_CHINATIMES=true
